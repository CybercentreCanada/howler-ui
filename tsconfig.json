{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* */
    "paths": {
      "commons/*": ["./src/commons/*"],
      "i18n": ["./src/i18n"],
      "index.css": ["./src/index.css"],
      "components/*": ["./src/components/*"],
      "locales/*": ["./src/locales/*"],
      "models/*": ["./src/models/*"],
      "api": ["./src/api"],
      "api/*": ["./src/api/*"],
      "rest": ["./src/rest"],
      "rest/*": ["./src/rest/*"],
      "utils": ["./src/utils"],
      "utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src", "setupTests.ts", "setupProxy.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
